{
  "name" : "caleydo-vis-axis",
  "version": "0.0.1",
  "dependencies": {
    "d3": "~3.4.11"
  },
  "caleydo" : {
    "plugins": [
      {
        "type": "vis",
        "id": "caleydo-vis-axis",
        "name": "Axis",
        "icon": "icon.svg",
        "scaling": "height-only",
        "filter": [
          "vector",
          "(real|int)"
        ],
        "options": {
          "tickSize": {
            "type": "int",
            "range": [
              1,
              null
            ],
            "default": 2
          },
          "orient": {
            "type": "categorical",
            "categories": [
              "left",
              "right",
              "top",
              "bottom"
            ],
            "default": "left"
          }
        }
      }
    ]
  }
}
