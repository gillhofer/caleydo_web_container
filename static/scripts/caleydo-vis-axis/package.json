{
  "name" : "caleydo-vis-axis",
  "version": "0.0.1",
  "dependencies": {
    "d3": "~3.4.11"
  },
  "caleydo" : {
    "plugins": [
      {
        "type": "vis",
        "id": "caleydo-vis-axis",
        "name": "Axis",
        "icon": "icon.svg",
        "size" : {
          "size" : [{ "k" : 0, "c" : 50 }, { "k" : 0, "c" : 300 }],
          "scale" : "y",
          "minSize" : [50, 50]
        },
        "filter": "eval!function (data) { return data.desc.type === 'vector' && (data.desc.value.type === 'real' || data.desc.value.type === 'int'); }",
        "options" : {
          "tickSize" : {
            "type" : "int",
            "range" : [1,null],
            "default" : 2
          },
          "orient" : {
           "type" : "categorical",
            "categories" : ["left","right","top","bottom"],
            "default" : "left"
          }
        }
      }
    ]
  }
}
